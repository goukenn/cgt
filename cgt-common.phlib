function igk_cgt_get_picto_size($n){
	$o = igk_createObj();
	
	$tab = igk_cgt_get_env(IGK_CGT_PICTOSIZE, array());
	if(isset($tab[$n])){		
		list($x, $y) = explode(';',$tab[$n]);
		$o->x = $x;
		$o->y = $y;
	}else{	
		$o->x = 16;
		$o->y = 16;
	}
	return $o;
}

