function igk_cgt_is_action_function($n, & $callback=null){
	$action = igk_cgt_get_env("cgt://actions");
	if (isset($action[$n])){
		$callback = $action[$n];
		return 1;
	}
	$n = "igk_cgt_action_".$n;
	if (function_exists($n)){
		$callback = $n;
		return 1;
	}
	return 0;
